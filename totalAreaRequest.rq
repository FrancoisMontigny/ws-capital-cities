PREFIX dboPop: <http://dbpedia.org/ontology/PopulatedPlace/>
select distinct ?capitalName xsd:double(?area) where 
{
	#TODO: might need to bind area to an actual field
	?country a dbo:Country.
	?country dbo:flag ?flag.
	{
		{?country dbo:capital ?capital}
		UNION
		{?country dbp:capital ?capital}
	}
	?capital foaf:name ?capitalName.

	# Example URL
	FILTER(contains(str(?capital), %CAPITAL_URL%)))

	# Total Area in square meters
	?capital dboPop:areaTotal ?area.
}